{
  "name": "poke-frontend",
  "version": "0.0.1",
  "description": "Poke frontend",
  "scripts": {
    "build": "webpack",
    "build:server:dev": "NODE_ENV=development npm run build -- --env development --watch --config ./webpack.config.server.babel.js --colors --display-error-details",
    "build:server:prod": "NODE_ENV=production npm run build -- --env production --config ./webpack.config.server.babel.js --colors --display-error-details",
    "build:client:prod": "NODE_ENV=production npm run build -- --env production --config ./webpack.config.client.babel.js",
    "build:prod": "npm run build:server:prod && npm run build:client:prod",
    "watch:client": "NODE_ENV=development node -r dotenv/config bin/webpack-dev-server.js",
    "dev": "concurrently --kill-others \"npm run watch:client\" \"npm run build:server:dev\" \"nodemon -r dotenv/config bin/server.js\"",
    "start": "NODE_ENV=production node -r dotenv/config bin/server.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Bryan Huang <huangchiheng@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.6",
    "clean-webpack-plugin": "^2.0.1",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "postcss-flexibility": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack-cli": "^3.3.0",
    "webpack-dev-middleware": "^3.6.2",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.3",
    "@material-ui/core": "^4.2.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "mini-css-extract-plugin": "^0.8.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-config": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-slick": "^0.24.0",
    "slick-carousel": "^1.8.1",
    "styled-components": "^4.2.0",
    "styled-reset": "^3.0.0",
    "universal-webpack": "^0.6.12",
    "webpack": "^4.37.0"
  }
}
